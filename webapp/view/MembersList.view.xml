<mvc:View
    controllerName="bcg.casaberlim.controller.MembersList"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <Table id="idMembersTable"
        inset="false"
        mode="SingleSelectMaster"
        itemPress="onOpenReserveDialog"
        items="{
            path: 'members>/Members',
            sorter : {
                path : 'isGoing',
                descending: true
            }
        }">

        <columns>
            <Column width="30px" vAlign="Middle">
                <Text text="{i18n>columnStatus}" />
            </Column>
            <Column>
                <Text text="{i18n>columnName}" />
            </Column>
            <Column vAlign="Middle">
                <Text text="{i18n>columnArrivalTime}" />
            </Column>
            <Column vAlign="Middle">
                <Text text="{i18n>columnLeaveTime}" />
            </Column>
        </columns>

        <items>
            <ColumnListItem type="Active">
                <cells>
                    <core:Icon
                        src="{= ${members>isGoing} ? 'sap-icon://accept' : 'sap-icon://decline'}"
                        color="{= ${members>isGoing} ? 'green' : 'red'}"
                        />
                    <ObjectIdentifier title="{members>Nick}"
                        text="{members>Name}" />
                    <Text text="{members>ArrivalTime}" visible="{members>isGoing}" />
                    <Text text="{members>LeaveTime}" visible="{members>isGoing}" />
                </cells>
            </ColumnListItem>
        </items>

    </Table>
</mvc:View>
