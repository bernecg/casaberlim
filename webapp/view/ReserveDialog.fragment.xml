<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt" >
    <Dialog
        id="reserveDialog"
        title="{i18n>homePageTitle}">
        <tnt:ToolHeader>
            <Title text="{i18n>reserveDialogSwitchText}"
                level="H4" titleStyle="H4" class="sapUiSmallMarginBegin"/>
            <ToolbarSpacer />
            <Switch state="{selectedMember>/isGoing}"
                customTextOn="{i18n>reserveDialogSwitchOn}"
                customTextOff="{i18n>reserveDialogSwitchOff}"
                class="sapUiSmallMarginEnd" />
        </tnt:ToolHeader>
        <List visible="{selectedMember>/isGoing}">
            <InputListItem label="{i18n>reserveDialogArriavelTime}">
                <TimePicker
                    id="arriveTime"
                    value="{selectedMember>/ArrivalTime}"
                    valueFormat="HH:mm"
                    displayFormat="HH:mm"
                    minutesStep="15"
                    change="handleChange"
                    width="150px" />
            </InputListItem>
            <InputListItem label="{i18n>reserveDialogLeaveTime}">
                <TimePicker
                    id="leaveTime"
                    value="{selectedMember>/LeaveTime}"
                    valueFormat="HH:mm"
                    displayFormat="HH:mm"
                    minutesStep="15"
                    change="handleChange"
                    width="150px" />
            </InputListItem>
        </List>
        <endButton>
            <Button
                text="{i18n>reserveDialogSaveButtonText}"
                press="onSaveReserveDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
